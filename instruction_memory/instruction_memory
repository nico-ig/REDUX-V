    %store/vec4 v0x55f7795abb60_0, 0, 32;
    %load/vec4 v0x55f7795abb60_0;
    %cmpi/e 0, 0, 32;
    %jmp/0xz  T_2.0, 4;
    %vpi_func 2 26 "$fopen" 32, "instruction_memory.rom", "w+" {0 0 0};
    %store/vec4 v0x55f7795abb60_0, 0, 32;
    %fork t_1, S_0x55f779550f50;
    %jmp t_0;
    .scope S_0x55f779550f50;
t_1 ;
    %pushi/vec4 0, 0, 9;
    %store/vec4 v0x55f77957cbe0_0, 0, 9;
T_2.2 ;
    %load/vec4 v0x55f77957cbe0_0;
    %cmpi/ne 256, 0, 9;
    %jmp/0xz T_2.3, 4;
    %load/vec4 v0x55f77957cbe0_0;
    %pad/u 8;
    %store/vec4 v0x55f7795ab900_0, 0, 8;
    %vpi_call 2 29 "$fdisplayh", v0x55f7795abb60_0, v0x55f7795ab900_0 {0 0 0};
    ; show_stmt_assign_vector: Get l-value for compressed += operand
    %load/vec4 v0x55f77957cbe0_0;
    %pushi/vec4 1, 0, 9;
    %add;
    %store/vec4 v0x55f77957cbe0_0, 0, 9;
    %jmp T_2.2;
T_2.3 ;
    %end;
    .scope S_0x55f779550dc0;
t_0 %join;
    %vpi_call 2 31 "$fclose", v0x55f7795abb60_0 {0 0 0};
