    .scope S_0x55f779550dc0;
T_5 ;
    %delay 4, 0;
    %load/vec4 v0x55f7795ab830_0;
    %nor/r;
    %store/vec4 v0x55f7795ab830_0, 0, 1;
    %jmp T_5;
    .thread T_5;
    .scope S_0x55f779550dc0;
T_6 ;
    %wait E_0x55f7795937a0;
    %load/vec4 v0x55f7795ab830_0;
    %cmpi/e 0, 0, 1;
    %jmp/0xz  T_6.0, 4;
